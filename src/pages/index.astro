---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
    <body class="bg-slate-200">
		<div class="bg-green-100 h-28 flex items-center mb-5">
			<header class="flex justify-between container max-w-6xl mx-auto">
				<h1><span class="font-semibold text-green-400 text-3xl">ReserWeb</span><span class="font-semibold text-xl"></span></h1>
				<menu class="mt-4">
					<ul class="space-x-5">
						<li class="inline"><a href="" class="text-green-600 border-b-2 border-solid border-green-200">Inicio</a></li>
						<li class="inline"><a href="./canchas" target="_blank" >Canchas</a></li>
						<li class="inline"><a href="" >Comentarios</a></li>
						<li class="inline"><a href="" >Contactos</a></li>
					</ul>
				</menu>
				<div class="flex">
					<h1 class="mb-2">Hora Colombia<p id="hora"></p></h1>
				</div>
			</header>
		</div>
		<div class="flex ">
			<div class="bg-white bg-[url(https://deportedigital.mx/wp-content/uploads/2021/07/WhatsApp-Image-2021-07-14-at-3.47.03-PM.jpeg)] bg-cover py-10 rounded-xl shadow-md shadow-slate-400 max-w-7xl ml-40 mt-10  container">
				<div class="grid grid-cols-2 mt-10">
					<div class="mx-auto h-96 w-3/4  mt-10 bg-white  bg-cover rounded-lg">
					</div>
					<div class="mx- h-64 w-64 mt-10 ml-10 bg-cover">
						<h1 class="font-semibold text-2xl bg-slate-200 rounded-3xl max-w-[58px] pl-[9px]">Aquí</h1>
						<h1 class="font-semibold text-6xl text-slate-800  w-72 py-4" ><span class="text-white ">Escenarios</span> Deportivos</h1>
						<div class="bg-gradient-to-r from-green-300 to-zinc-200 rounded-2xl my-3 p-2 max-w-[256px] py-4">
							<h1 class="font-semibold text-green-800 text-4xl ml-4">Sinteticas</h1>
						</div>
						<div class=" flex my-8">
							<div class="bg-slate-200 w-3 rounded-md">
								<h1 class="text-slate-200">H</h1> 
							</div>
							<div class="max-w-40 ">
								<h1 class="text-lime-800 ml-1">Horarios, Ubicaciones<br>Comunidad</h1>
							</div>
						</div>
						
					</div>
				</div>
				<div class="grid grid-cols-2 mt-10">
					<div class="bg-white shadow-md shadow-black mt-36 mx-auto w-1/3 rounded-lg max-h-20 text-center ">
						<h1 class=" mt-6 font-semibold"><span class="text-green-600">Disfruta</span> de tu pasión</h1>
					</div>
					<div class=" bg-black h-72 rounded-lg  mr-20 mt-10">
						<iframe class="w-full h-full rounded-lg " width="full" height="full" src="https://www.youtube.com/embed/ilH70qIAicI?si=84xVw8P-e-eC7p6h&amp;autoplay=1&mute=1" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
					</div> 
				</div>
				
			</div>
			<div class="bg-white py-10 rounded-xl shadow-md shadow-slate-400 ml-40 max-w-6xl mt-10 w-1/4">
				<div class="bg-green-100 shadow-md shadow-slate-300 mt-00 mx-auto py-6 w-11/12 rounded-lg flex justify-center">
					<h1 class="font-semibold text-3xl py-3 ">Noticias</h1>
				</div>
				<div class="w-auto ">
				    <iframe class="mx-auto mt-5" src="https://api.wo-cloud.com/content/widget/?geoObjectKey=3728740&language=es&region=AR&timeFormat=HH:mm&windUnit=kmh&systemOfMeasurement=metric&temperatureUnit=celsius" name="CW2" scrolling="no" width="270" height="125" frameborder="0" style="border: 1px solid #10658E;border-radius: 8px"></iframe>
				</div>	
			</div>
		</div>
		<script>
			function actualizarHora() {
    			var ahora = new Date();
    			var hora = ahora.getHours();
    			var minutos = ahora.getMinutes();
    			var segundos = ahora.getSeconds();

    
    			var horaFormateada = (hora < 10 ? '0' + hora : hora).toString();
    			var minutosFormateados = (minutos < 10 ? '0' + minutos : minutos).toString();
    			var segundosFormateados = (segundos < 10 ? '0' + segundos : segundos).toString();

    			var horaActual = horaFormateada + ':' + minutosFormateados + ':' + segundosFormateados;
    			document.getElementById('hora').innerHTML = horaActual;
			}
			setInterval(actualizarHora, 1000);

       
       		 actualizarHora();
		</script>
</Layout>


